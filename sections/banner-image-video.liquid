{%- liquid 
  assign sid = section.id
  assign se_stts = section.settings -%}

<div class="nt_se_{{sid}} {{se_stts.layout}}">
  {%- render 'section_title',section:section -%}
  <div class="mt__30 nt_banner_holder row equal_nt cat_space_{{se_stts.cat_space}}">
    {%- for block in section.blocks -%}
      {%- assign bk_stts = block.settings -%}
      {%- assign block_width_desktop = bk_stts.col_pr | default: '6' -%}
      {%- assign block_width_tablet = bk_stts.col_pr_tb | default: '6' -%}
      {%- assign block_width_mobile = bk_stts.col_pr_mb | default: '12' -%}
      
      <div class="cat_space_item bk_{{block.id}} col-lg-{{block_width_desktop}} col-md-{{block_width_tablet}} col-{{block_width_mobile}}{% if block.type == 'video' %} is_video_block{% endif %}">
        <div class="nt_banner_block oh pr middle center{% if block.type == 'video' %} banner_has_video{% endif %}{% if block.type == 'video' and bk_stts.source == '1' %} video_loading js_video{% endif %}"{% if block.type == 'video' and bk_stts.source == '1' %} data-id="{{ bk_stts.video_url.id }}"{% endif %}>
          
          {%- comment -%} Background: Image or Video {%- endcomment -%}
          <div class="nt_bg_lz">
            {%- if block.type == 'video' -%}
              {%- if bk_stts.source == '1' -%}
                {%- comment -%} YouTube Video {%- endcomment -%}
                <div class="videoplayer"></div>
              {%- else -%}
                {%- comment -%} Uploaded Video or CDN Video {%- endcomment -%}
                {%- liquid
                  assign video_src = ''
                  if bk_stts.source == '2'
                    if bk_stts.file_name != blank
                      assign video_src = bk_stts.file_name | file_url
                    endif
                  elsif bk_stts.source == '3'
                    if bk_stts.cdn_video_url != blank
                      assign video_src = bk_stts.cdn_video_url
                    endif
                  endif
                -%}
                {%- if video_src != blank -%}
                  <video id="video_{{block.id}}" class="vid_nt vid_nt_js pa t__0 l__0 op__0 vid_bg lazypreload" preload="none" playsinline data-autoplay muted loop>
                    <source data-src="{{ video_src }}" src="{{ video_src }}" type="video/mp4">
                  </video>
                  <div class="pa t__0 l__0 b__0 r__0 flex column tc fl_center pe_none btn_video_ef">
                    <button type="button" class="flex fl_center al_center video-control__play">
                      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-play" viewBox="0 0 20 40">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M23.6 16.8L7 1.5C5.6.3 4 .2 2.9.7 1.6 1.4.8 2.7.7 3.8v31.7c0 1.8 1.1 3.3 3.1 3.3 1.5 0 2.5-.5 3.4-1.4l16.4-15.7c1.5-1.4 1.5-3.6 0-4.9z"></path>
                      </svg>
                    </button>
                  </div>
                {%- endif -%}
              {%- endif -%}
              
              {%- comment -%} Cover image for video (desktop/mobile) {%- endcomment -%}
              {%- if bk_stts.cover_image != blank -%}
                {%- assign cover_img = bk_stts.cover_image -%}
                {%- assign cover_img_mobile = bk_stts.cover_image_mobile -%}
                {%- if cover_img_mobile != blank -%}
                  {%- comment -%} Separate mobile cover exists {%- endcomment -%}
                  <div class="pa l__0 t__0 r__0 b__0 bg_rp_norepeat bg_sz_cover img_vid_js pe_none desktop_cover" 
                       data-bgset="{{ cover_img | img_url: '1x1' }}" 
                       data-ratio="{{cover_img.aspect_ratio}}" 
                       data-sizes="auto" 
                       style="background-image: url({{ cover_img | img_url: '1x1' }})"></div>
                  <div class="pa l__0 t__0 r__0 b__0 bg_rp_norepeat bg_sz_cover img_vid_js pe_none mobile_cover" 
                       data-bgset="{{ cover_img_mobile | img_url: '1x1' }}" 
                       data-ratio="{{cover_img_mobile.aspect_ratio}}" 
                       data-sizes="auto" 
                       style="background-image: url({{ cover_img_mobile | img_url: '1x1' }})"></div>
                {%- else -%}
                  {%- comment -%} Use same image for both desktop and mobile {%- endcomment -%}
                  <div class="pa l__0 t__0 r__0 b__0 bg_rp_norepeat bg_sz_cover img_vid_js pe_none" 
                       data-bgset="{{ cover_img | img_url: '1x1' }}" 
                       data-ratio="{{cover_img.aspect_ratio}}" 
                       data-sizes="auto" 
                       style="background-image: url({{ cover_img | img_url: '1x1' }})"></div>
                {%- endif -%}
              {%- endif -%}
              
            {%- else -%}
              {%- comment -%} Image Block {%- endcomment -%}
              {%- assign image_desktop = bk_stts.image -%}
              {%- assign image_mobile = bk_stts.image_mobile | default: bk_stts.image -%}
              
              {%- if image_desktop != blank -%}
                <div class="nt_bg_lz lazyload item__position {{bk_stts.img_align}} desktop_image" 
                     data-bgset="{{ image_desktop | img_url: '1x1' }}" 
                     data-ratio="{{image_desktop.aspect_ratio}}" 
                     data-sizes="auto" 
                     data-parent-fit="cover" 
                     style="padding-top:{{ 1 | divided_by: image_desktop.aspect_ratio | times: 100}}%"></div>
              {%- endif -%}
              
              {%- if image_mobile != blank -%}
                <div class="nt_bg_lz lazyload item__position {{bk_stts.img_align}} mobile_image" 
                     data-bgset="{{ image_mobile | img_url: '1x1' }}" 
                     data-ratio="{{image_mobile.aspect_ratio}}" 
                     data-sizes="auto" 
                     data-parent-fit="cover" 
                     style="padding-top:{{ 1 | divided_by: image_mobile.aspect_ratio | times: 100}}%"></div>
              {%- endif -%}
              
              {%- if image_desktop == blank and image_mobile == blank -%}
                {%- capture cl -%}{% cycle 'a8dacc', '56cfe1' %}{%- endcapture -%}
                <div class="nt_bg_lz lazyload item__position {{bk_stts.img_align}}" 
                     data-bg="https://placehold.jp/1/{{cl}}/{{cl}}/530x600.png?text=1" 
                     style="padding-top:52.63157894736842%"></div>
              {%- endif -%}
            {%- endif -%}
          </div>
          
          {%- comment -%} Text Content Overlay {%- endcomment -%}
          <div class="txt_content pa t__0 l__0 b__0 r__0 flex column shadow_wrap {{bk_stts.txt_align}} {{bk_stts.banner_align}} pe_none z__100">
            <div class="pa pa_txts mb_h_pos{{bk_stts.cap_h_pos}} mb_v_pos{{bk_stts.cap_v_pos}} h_pos{{bk_stts.cap_h_pos}} v_pos{{bk_stts.cap_v_pos}}">
              {%- if bk_stts.heading != blank -%}
                <h3 id="heading_{{block.id}}" class="mt__0 mg__0 mb__10 lh__1">{{bk_stts.heading}}</h3>
              {%- endif -%}
              
              {%- if bk_stts.subheading != blank -%}
                <h4 id="subheading_{{block.id}}" class="mg__0 mb__20 lh__1">{{bk_stts.subheading}}</h4>
              {%- endif -%}
              
              {%- if bk_stts.button_label != blank and bk_stts.button_url != blank -%}
                <a id="button_{{block.id}}" 
                   class="button banner_btn pe_auto round_{{bk_stts.btn_round}}" 
                   href="{{bk_stts.button_url}}" 
                   target="{{bk_stts.button_target}}">{{bk_stts.button_label}}</a>
              {%- endif -%}
            </div>
          </div>
          
          {%- comment -%} Overlay Link (if no button) {%- endcomment -%}
          {%- if bk_stts.button_url != blank and bk_stts.button_label == blank -%}
            <a href="{{bk_stts.button_url}}" 
               target="{{bk_stts.button_target}}" 
               class="pa t__0 l__0 b__0 r__0"></a>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{%- render 'section_css' -%}
{%- style -%}
  .nt_se_{{sid}} .nt_banner_block>a:after {
    background-color: {{se_stts.cl_overlay}};
    opacity: {{se_stts.cl_opacity | divided_by: 100.00}};
  }
  
  {%- comment -%} Remove space between banners {%- endcomment -%}
  .nt_se_{{sid}} .cat_space_item {
    padding-left: 0 !important;
    padding-right: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }
  .nt_se_{{sid}} .nt_banner_holder {
    margin-left: 0 !important;
    margin-right: 0 !important;
  }
  
  {%- comment -%} Set same height for all image and video blocks {%- endcomment -%}
  {%- assign section_height = se_stts.section_height | default: 56.25 -%}
  .nt_se_{{sid}} .nt_banner_block .nt_bg_lz {
    position: relative;
    width: 100%;
    padding-top: {{section_height}}%;
    overflow: hidden;
  }
  .nt_se_{{sid}} .nt_banner_block .nt_bg_lz > div {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .nt_se_{{sid}} .nt_banner_block video.vid_nt {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    padding: 0;
  }
  
  {%- for block in section.blocks -%}
    {%- assign bid = block.id -%}
    {%- assign bk_stts = block.settings -%}
    
    {%- comment -%} Heading Styles {%- endcomment -%}
    {%- if bk_stts.heading != blank -%}
      .nt_se_{{sid}} #heading_{{bid}} {
        font-size: {{bk_stts.heading_size_mb | default: 24}}px;
        font-weight: {{bk_stts.heading_weight | default: 600}};
        color: {{bk_stts.heading_color | default: '#fff'}};
        {%- if bk_stts.heading_ls_mb != blank and bk_stts.heading_ls_mb != 0 -%}letter-spacing: {{bk_stts.heading_ls_mb}}px;{%- endif -%}
        {%- if bk_stts.heading_lh_mb != blank and bk_stts.heading_lh_mb != 0 -%}line-height: {{bk_stts.heading_lh_mb}}px;{%- endif -%}
      }
      @media (min-width: 768px) {
        .nt_se_{{sid}} #heading_{{bid}} {
          font-size: {{bk_stts.heading_size | default: 36}}px;
          {%- if bk_stts.heading_ls != blank and bk_stts.heading_ls != 0 -%}letter-spacing: {{bk_stts.heading_ls}}px;{%- endif -%}
          {%- if bk_stts.heading_lh != blank and bk_stts.heading_lh != 0 -%}line-height: {{bk_stts.heading_lh}}px;{%- endif -%}
        }
      }
    {%- endif -%}
    
    {%- comment -%} Subheading Styles {%- endcomment -%}
    {%- if bk_stts.subheading != blank -%}
      .nt_se_{{sid}} #subheading_{{bid}} {
        font-size: {{bk_stts.subheading_size_mb | default: 16}}px;
        font-weight: {{bk_stts.subheading_weight | default: 400}};
        color: {{bk_stts.subheading_color | default: '#fff'}};
        {%- if bk_stts.subheading_ls_mb != blank and bk_stts.subheading_ls_mb != 0 -%}letter-spacing: {{bk_stts.subheading_ls_mb}}px;{%- endif -%}
        {%- if bk_stts.subheading_lh_mb != blank and bk_stts.subheading_lh_mb != 0 -%}line-height: {{bk_stts.subheading_lh_mb}}px;{%- endif -%}
      }
      @media (min-width: 768px) {
        .nt_se_{{sid}} #subheading_{{bid}} {
          font-size: {{bk_stts.subheading_size | default: 20}}px;
          {%- if bk_stts.subheading_ls != blank and bk_stts.subheading_ls != 0 -%}letter-spacing: {{bk_stts.subheading_ls}}px;{%- endif -%}
          {%- if bk_stts.subheading_lh != blank and bk_stts.subheading_lh != 0 -%}line-height: {{bk_stts.subheading_lh}}px;{%- endif -%}
        }
      }
    {%- endif -%}
    
    {%- comment -%} Button Styles {%- endcomment -%}
    {%- if bk_stts.button_label != blank -%}
      .nt_se_{{sid}} #button_{{bid}} {
        padding-left: {{bk_stts.btn_pd_mb | default: 20}}px;
        padding-right: {{bk_stts.btn_pd_mb | default: 20}}px;
        min-height: {{bk_stts.btn_h_mb | default: 44}}px;
        font-size: {{bk_stts.btn_fs_mb | default: 14}}px;
        font-weight: {{bk_stts.btn_weight | default: 600}};
        color: {{bk_stts.button_text_color | default: '#fff'}};
        background-color: {{bk_stts.button_bg_color | default: '#222'}};
        border-color: {{bk_stts.button_bg_color | default: '#222'}};
        {%- if bk_stts.btn_round -%}border-radius: 50px;{%- else -%}border-radius: {{bk_stts.btn_bdr_mb | default: 0}}px;{%- endif -%}
        {%- if bk_stts.btn_ls_mb != blank and bk_stts.btn_ls_mb != 0 -%}letter-spacing: {{bk_stts.btn_ls_mb}}px;{%- endif -%}
      }
      @media (min-width: 768px) {
        .nt_se_{{sid}} #button_{{bid}} {
          padding-left: {{bk_stts.btn_pd | default: 30}}px;
          padding-right: {{bk_stts.btn_pd | default: 30}}px;
          min-height: {{bk_stts.btn_h | default: 50}}px;
          font-size: {{bk_stts.btn_fs | default: 16}}px;
          {%- unless bk_stts.btn_round -%}border-radius: {{bk_stts.btn_bdr | default: 0}}px;{%- endunless -%}
          {%- if bk_stts.btn_ls != blank and bk_stts.btn_ls != 0 -%}letter-spacing: {{bk_stts.btn_ls}}px;{%- endif -%}
        }
      }
    {%- endif -%}
    
    {%- comment -%} Content Position Styles {%- endcomment -%}
    {%- assign cap_h = bk_stts.cap_h_pos | default: 50 -%}
    {%- assign cap_v = bk_stts.cap_v_pos | default: 50 -%}
    {%- assign cap_h_mb = bk_stts.cap_h_pos_mb | default: cap_h -%}
    {%- assign cap_v_mb = bk_stts.cap_v_pos_mb | default: cap_v -%}
    .nt_se_{{sid}} .bk_{{bid}} .pa_txts {
      left: {{cap_h_mb}}%;
      top: {{cap_v_mb}}%;
      transform: translate(-{{cap_h_mb}}%, -{{cap_v_mb}}%);
    }
    @media (min-width: 768px) {
      .nt_se_{{sid}} .bk_{{bid}} .pa_txts {
        left: {{cap_h}}%;
        top: {{cap_v}}%;
        transform: translate(-{{cap_h}}%, -{{cap_v}}%);
      }
    }
    
    {%- comment -%} Hide desktop image on mobile and vice versa {%- endcomment -%}
    .nt_se_{{sid}} .desktop_image {
      display: block;
    }
    @media (max-width: 767px) {
      {%- comment -%} Hide video blocks on mobile devices {%- endcomment -%}
      .nt_se_{{sid}} .cat_space_item.is_video_block {
        display: none !important;
      }
      .nt_se_{{sid}} .desktop_image {
        display: none;
      }
      .nt_se_{{sid}} .mobile_image {
        display: block;
      }
      .nt_se_{{sid}} .desktop_cover {
        display: none;
      }
      .nt_se_{{sid}} .mobile_cover {
        display: block;
      }
    }
    @media (min-width: 768px) {
      .nt_se_{{sid}} .mobile_image {
        display: none;
      }
      .nt_se_{{sid}} .mobile_cover {
        display: none;
      }
    }
  {%- endfor -%}
{%- endstyle -%}

{%- schema -%}
{
  "name": "Banner with Video",
  "class": "nt_section type_banner_video",
  "max_blocks": 10,
  "settings": [
    {
      "type": "header",
      "content": "== Title Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Banner with Video"
    },
    {
      "type": "textarea",
      "id": "sub_title",
      "label": "Sub Text"
    },
    {
      "type": "select",
      "id": "sub_font",
      "default": "2",
      "options": [
        {
          "value": "1",
          "label": "Body font"
        },
        {
          "value": "2",
          "label": "Sub title font"
        }
      ],
      "label": "Sub Text use font:"
    },
    {
      "type": "header",
      "content": "== General Settings"
    },
    {
      "type": "range",
      "id": "section_height",
      "label": "Section Height (Aspect Ratio)",
      "info": "Controls the height of banners. Lower values = shorter banners, higher values = taller banners",
      "min": 25,
      "max": 150,
      "step": 5,
      "unit": "%",
      "default": 30
    },
    {
      "type": "select",
      "id": "cat_space",
      "options": [
        {
          "value": "30",
          "label": "30"
        },
        {
          "value": "20",
          "label": "20"
        },
        {
          "value": "10",
          "label": "10"
        },
        {
          "value": "6",
          "label": "6"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "0",
          "label": "0"
        }
      ],
      "label": "Space between Banners",
      "default": "30"
    },
    {
      "type": "header",
      "content": "== Color"
    },
    {
      "type": "color",
      "id": "cl_overlay",
      "label": "Overlay",
      "default": "#000"
    },
    {
      "type": "range",
      "id": "cl_opacity",
      "label": "Overlay opacity",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "== Design Options"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "container",
          "label": "Container"
        },
        {
          "value": "nt_full",
          "label": "Full Width"
        }
      ],
      "label": "Layout",
      "default": "nt_full"
    },
    {
      "type": "color",
      "id": "cl_bg",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "mg",
      "label": "Margin",
      "info": "Margin top, margin right, margin bottom, margin left. If you not use to blank",
      "placeholder": "50px,,50px,"
    },
    {
      "type": "text",
      "id": "pd",
      "label": "Padding",
      "info": "Padding top, padding right, padding bottom, padding left. If you not use to blank",
      "placeholder": "50px,,50px,"
    },
    {
      "type": "header",
      "content": "== Design Mobile Options"
    },
    {
      "type": "text",
      "id": "mg_mb",
      "label": "Margin",
      "placeholder": "50px,,50px,"
    },
    {
      "type": "text",
      "id": "pd_mb",
      "label": "Padding",
      "placeholder": "50px,,50px,"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "header",
          "content": "== Image Settings"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image",
          "info": "Optional. If not set, desktop image will be used on mobile"
        },
        {
          "type": "select",
          "id": "img_align",
          "default": "center",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Middle"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ],
          "label": "Image alignment"
        },
        {
          "type": "select",
          "id": "col_pr",
          "label": "Block width (desktop)",
          "default": "6",
          "options": [
            {
              "value": "12",
              "label": "100%"
            },
            {
              "value": "8",
              "label": "66.6%"
            },
            {
              "value": "6",
              "label": "50%"
            },
            {
              "value": "4",
              "label": "33.3%"
            },
            {
              "value": "3",
              "label": "25%"
            }
          ]
        },
        {
          "type": "select",
          "id": "col_pr_tb",
          "label": "Block width (tablet)",
          "default": "6",
          "options": [
            {
              "value": "12",
              "label": "100%"
            },
            {
              "value": "8",
              "label": "66.6%"
            },
            {
              "value": "6",
              "label": "50%"
            },
            {
              "value": "4",
              "label": "33.3%"
            }
          ]
        },
        {
          "type": "select",
          "id": "col_pr_mb",
          "label": "Block width (mobile)",
          "default": "12",
          "options": [
            {
              "value": "12",
              "label": "100%"
            },
            {
              "value": "6",
              "label": "50%"
            }
          ]
        },
        {
          "type": "header",
          "content": "== Content Settings"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading",
          "default": "Heading Text"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#fff"
        },
        {
          "type": "range",
          "id": "heading_size",
          "min": 16,
          "max": 80,
          "step": 1,
          "label": "Heading Font Size (Desktop)",
          "unit": "px",
          "default": 36
        },
        {
          "type": "range",
          "id": "heading_size_mb",
          "min": 12,
          "max": 50,
          "step": 1,
          "label": "Heading Font Size (Mobile)",
          "unit": "px",
          "default": 24
        },
        {
          "type": "range",
          "id": "heading_weight",
          "min": 400,
          "max": 800,
          "step": 100,
          "label": "Heading Font Weight",
          "default": 600
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading Text"
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "Subheading Color",
          "default": "#fff"
        },
        {
          "type": "range",
          "id": "subheading_size",
          "min": 12,
          "max": 40,
          "step": 1,
          "label": "Subheading Font Size (Desktop)",
          "unit": "px",
          "default": 20
        },
        {
          "type": "range",
          "id": "subheading_size_mb",
          "min": 12,
          "max": 30,
          "step": 1,
          "label": "Subheading Font Size (Mobile)",
          "unit": "px",
          "default": 16
        },
        {
          "type": "range",
          "id": "subheading_weight",
          "min": 400,
          "max": 700,
          "step": 100,
          "label": "Subheading Font Weight",
          "default": 400
        },
